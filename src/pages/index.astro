---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
	<main class="max-w-6xl mx-auto">
		<div class="grid grid-cols-3 gap-4 my-10">
			<div
				class="ring-1 ring-black/10 rounded-2xl flex flex-col gap-2 p-6"
			>
				<div class="relative overflow-hidden rounded-full w-20 h-20">
					<img
						src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2864&q=80"
						alt=""
						class="w-full h-full object-cover object-center"
					/>
					<div
						class="pointer-events-none absolute inset-0 rounded-full ring-1 ring-inset ring-slate-900/10"
					>
					</div>
				</div>

				<h1 class="text-3xl max-w-[13rem] font-medium pt-2 capitalize">
					A portfolio brimming with innovation
				</h1>

				<span class="text-sm pt-4 text-slate-500"
					>Javier Reyes &bull; Software Engineer</span
				>
			</div>

			<div class="grid gap-4">
				<div
					class="ring-1 ring-black/10 rounded-2xl flex flex-col gap-1 p-5 justify-center"
				>
					<span class="text-slate-500 text-lg leading-3">Title</span>
					<span
						class="text-slate-900 text-lg leading-3 pt-2 font-medium"
						>Software Engineer</span
					>
				</div>

				<div class="grid grid-cols-4 gap-4">
					<div class="ring-1 ring-black/10 rounded-2xl p-6">Test</div>
					<div class="ring-1 ring-black/10 rounded-2xl p-6">Test</div>
					<div class="ring-1 ring-black/10 rounded-2xl p-6">Test</div>
					<div class="ring-1 ring-black/10 rounded-2xl p-6">Test</div>
				</div>

				<div
					class="ring-1 ring-black/10 rounded-2xl flex flex-col gap-1 p-5 justify-center"
				>
					<span class="text-slate-500 text-lg leading-3"
						>Based In</span
					>
					<span
						class="text-slate-900 text-lg leading-3 pt-2 font-medium"
						>Santiago, CL</span
					>
				</div>
			</div>

			<div
				class="ring-1 space-y-6 ring-black/10 rounded-2xl flex flex-col p-6"
			>
				<svg
					class="w-14 h-14 text-slate-500 mx-auto"
					fill="none"
					viewBox="0 0 24 24"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						d="M4.75 6.75C4.75 5.64543 5.64543 4.75 6.75 4.75H17.25C18.3546 4.75 19.25 5.64543 19.25 6.75V14.25C19.25 15.3546 18.3546 16.25 17.25 16.25H14.625L12 19.25L9.375 16.25H6.75C5.64543 16.25 4.75 15.3546 4.75 14.25V6.75Z"
					></path>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M9.5 11C9.5 11.2761 9.27614 11.5 9 11.5C8.72386 11.5 8.5 11.2761 8.5 11C8.5 10.7239 8.72386 10.5 9 10.5C9.27614 10.5 9.5 10.7239 9.5 11Z"
					></path>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M12.5 11C12.5 11.2761 12.2761 11.5 12 11.5C11.7239 11.5 11.5 11.2761 11.5 11C11.5 10.7239 11.7239 10.5 12 10.5C12.2761 10.5 12.5 10.7239 12.5 11Z"
					></path>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M15.5 11C15.5 11.2761 15.2761 11.5 15 11.5C14.7239 11.5 14.5 11.2761 14.5 11C14.5 10.7239 14.7239 10.5 15 10.5C15.2761 10.5 15.5 10.7239 15.5 11Z"
					></path>
				</svg>

				<h1 class="text-4xl text-center font-medium text-slate-900">
					Wanna work together?
				</h1>

				<span
					class="text-center px-6 py-2 rounded-full bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 text-white w-fit mx-auto"
					>hey@javierreyes.dev</span
				>
			</div>
		</div>
	</main>
</Layout>
